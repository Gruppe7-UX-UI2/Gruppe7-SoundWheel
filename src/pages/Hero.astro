<section class="hero">
  <!-- IMAGE TOP – MOBILE FIRST -->
  <img class="hero_img hero_img--top" src="/public/herobillede1.svg" alt="People working" />

  <!-- CENTER TEXTBOX -->
  <div class="hero_box">
    <h1>VIL DU SKABE PAUSER DER BETALER SIG?</h1>
  </div>

  <!-- IMAGE BOTTOM – MOBILE FIRST -->
  <img class="hero_img hero_img--bottom" src="/public/herobillede2.svg" alt="Woman relaxing" />
