<style>
  * {
    box-sizing: border-box;
    font-family: "Inter", sans-serif;
  }

  /* Mobil first! */

  .header {
    width: 100%;
    background: #ffffff;

    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;

    padding: 1.2rem 1.6rem;

    min-height: 90px;
  }

  .header_logo img {
    height: 68px;
    width: auto;
    display: block;
  }

  .header_nav {
    display: none;
  }

  .header_cta {
    background: #4a1716;
    color: #fff;
    padding: 0.6rem 1.8rem;
    text-decoration: none;
    font-weight: 600;
    border-radius: 50px;
    white-space: nowrap;
    font-size: 0.95rem;
  }

  /* Desktop version! */

  @media (min-width: 900px) {
    .header {
      padding: 1.8rem 3.2rem;
      min-height: 95px;
    }

    .header_nav {
      display: flex;
      gap: 3.6rem;
      justify-self: center;
    }

    .header_nav a {
      text-decoration: none;
      color: #000;
      font-weight: 600;
      font-size: 1rem;
      letter-spacing: 0.02em;
    }

    .header_cta {
      font-size: 1rem;
      padding: 0.75rem 2rem;
      border-radius: 999px;
    }
  }
</style>
