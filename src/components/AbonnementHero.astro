<style>
  section {
    background-color: #e0dcd3;
    margin-bottom: 8rem;
  }

  h1 {
    padding-top: 3rem;
    text-align: center;
    color: #38171A;
  }

  h2 {
    margin-top: 0.5rem;
    margin-bottom: 1.5rem;
    text-align: center;
    font-weight: 400;
    color: #38171A;
  }

  p {
    font-size: 1.2rem;
    font-weight: 600;
    color: #38171A;
  }

  .flex_tjek {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .flex_tjek img {
    width: 60px;
  }

  .flex {
    display: flex;
    flex-direction: column;
    width: 80%;
    margin: 0 auto;
    padding-bottom: 5rem;
    gap: 30px;
  }

  .desktop_1-1 img {
    width: 80%;
    margin: 0 auto;
    margin-bottom: 4rem;
  }

  .desktop_1-1 p {
    width: 80%;
    margin: 0 auto;
    line-height: 1.5;
    margin-bottom: 3rem;
  }

  .flex_pris {
    display: flex;
    max-width: 80%;
    margin: 0 auto;
    margin-bottom: 3rem;
  }

  .pris_tekst {
    font-size: 1.6rem;
    font-weight: 300;
  }

  .pris {
    font-size: 1.6rem;
  }

  @media (min-width: 800px) {
    .desktop_1-1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      margin-bottom: 5rem;
      grid-template-areas: "left right";
    }

    .flex {
      display: flex;
      flex-direction: row;
      gap: 100px;
      justify-content: center;
    }

    .flex_tjek {
      max-width: 300px;
    }

    .billede {
      grid-area: right;

    }

    h2 {
      margin-bottom: 3rem;
      
    }
  }
</style>