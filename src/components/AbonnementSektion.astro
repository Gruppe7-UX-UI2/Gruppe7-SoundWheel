---
import Kort from "./Kort.astro";

const { data } = Astro.props;
---

<section class="abonnement_sektion">
  <img src="/work_applogo.svg" alt="" class="app_logo" />
  <h2 class="abonnement_overskrift">Abonnementer</h2>

  <div class="abonnement_kort_wrapper">
    {
      data.map((subscription) => (
        <div class="abonnement_kort">
          <Kort name={subscription.Name} employee={subscription.Employee} price={subscription.Price} slug={subscription.slug} />
        </div>
      ))
    }
  </div>

  <p class="abonnement_note">
    Over 1000 medarbejdere? <span class="abonnement_kontakt">Kontakt os</span>
  </p>
</section>

<style>
  * {
    font-family: "Inter", sans-serif;
    box-sizing: border-box;
  }

  /* Mobil-first! */

  .abonnement_sektion {
    position: relative;
    padding: 3rem 1.2rem 4rem;
    background-color: #e0dcd3;
    margin-bottom: 15rem;
    text-align: center;
    color: #4b1c1c;
  }

  .app_logo {
    justify-self: center; /* højre kant */
    align-self: start; /* top */
    margin-top: -120px;
    margin-bottom: 3rem;
    width: 150px;
    height: auto;
    z-index: 10;
  }

  .abonnement_overskrift {
    font-size: clamp(1.8rem, 6vw, 4.375rem);
    font-weight: 700;
    margin-bottom: 2rem;
    color: #4b1c1c;
  }

  .abonnement_kort_wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin: 0 auto;
  }

  .abonnement_kort {
    width: 100%;
  }

  .abonnement_note {
    margin-top: 3rem;
    font-size: 1rem;
  }

  .abonnement_kontakt {
    font-weight: 700;
  }

  /* Desktop version! */

  @media (min-width: 1300px) {
    .abonnement_sektion {
      padding: 2rem 4rem 5rem;
    }

    .abonnement_overskrift {
      margin-bottom: 8rem;
    }

    .abonnement_kort_wrapper {
      flex-direction: row;
      justify-content: center;
      gap: 1rem;
    }

    .abonnement_kort {
    }

    .abonnement_note {
      margin-top: 2.5rem;
      font-size: 1.05rem;
    }

    .app_logo {
      justify-self: end; /* højre kant */
      align-self: start; /* top */
      margin-top: -150px;
      margin-right: 100px;
      margin-bottom: 1.5rem;
      width: 250px;
      height: auto;
      z-index: 10;
    }
  }
</style>
